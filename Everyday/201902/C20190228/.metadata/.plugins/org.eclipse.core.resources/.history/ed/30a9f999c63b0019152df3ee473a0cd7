#include<stdio.h>

int main()
{
	int hanoi(int,char,char,char)
	hanoi(3,'A','B','C');

	return 0;
}

int hanoi(int n,char x, char y,char z)
{
	int move(char, int, char);
	if(n==1)
	{
		move(x,n,z);
	}
	else
	{
		hanoi(n-1,x,z,y);
		move(x,n,z);
		hanoi(n-1,y,x,z);
	}

	return 0;
}

int move(char m,int number, char n )
{
	printf("move the disk %d from %s to %s", number,m,n);
	return 0;
}




